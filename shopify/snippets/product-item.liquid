<div class="product-item">
  {% if product.featured_image %}
    <a href="{{ product.url }}" class="product-item__img">
      {{ product.featured_image | img_url: '278x292' | img_tag }}
    </a>
  {% endif %}
  <div class="product-item__caption">
    <h3 class="product-item__name"><a href="{{ product.url }}">{{ product.title }}</a></h3>

    {% if product.variants.size > 0 %}
      <div class="product-item__variants">
        <select class="product-item__variants-select">
          {% for variant in product.variants %}
            <option value="{{ variant.id }}">{{ variant.title }}ml</option>
          {% endfor %}
        </select>
        <div class="product-item__variants-arrow">
          <svg width="19" height="10" viewBox="0 0 19 10" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M1 1L9.5 8L18 1" stroke="#242323" stroke-width="2" stroke-linecap="round"/>
          </svg>
        </div>
      </div>
    {% endif %}
    <div class="product-item__action">
      <button class="product-item__btn" type="button">{{ product.price | money_with_currency }} | add to cart</button>
    </div>
  </div>
</div>
